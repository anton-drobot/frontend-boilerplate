block vars
    - var title = 'Document'
    - var description = ''

doctype html
html.no-js(lang="ru")
    head
        meta(charset="utf-8")
        meta(http-equiv="x-ua-compatible", content="ie=edge")
        title #{title}
        meta(name="description", content="#{description}")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        block meta
        block styles
            link(rel="stylesheet", href="assets/css/main.css")
        script(src="assets/libraries/modernizr/modernizr-2.8.3.min.js")
    body
        header.b-header
            .b-wrapper
                .b-wrapper__margins
        main.b-content
            .b-wrapper
                .b-wrapper__margins
                    block content
        footer.b-footer
            .b-wrapper
                .b-wrapper__margins
        block scripts
            script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
            script window.jQuery || document.write('<script src="assets/libraries/jquery/jquery-2.1.3.min.js"><\/script>')
            script(src="assets/libraries/lodash/lodash-3.5.0.min.js")
            script(src="assets/js/plugins.js")
            script(src="assets/js/main.js")