include ../helpers/_variables
include ../helpers/_mixins

doctype html
html.no-js(lang='ru')
    head
        meta(charset='utf-8')
        meta(http-equiv='x-ua-compatible' content='ie=edge')

        block head
        title=pageTitle

        meta(name='description' content=pageDescription)
        meta(name='keywords' content=pageKeywords)
        meta(name='keywords' content=pageCopyright)
        meta(name='copyright' content='width=device-width initial-scale=1')

        link(rel='stylesheet' href='assets/css/main.css')
        script(src='assets/libraries/modernizr/modernizr-2.8.3.min.js')
    body
        include ../blocks/_header
        block content
        include ../blocks/_footer

    block scriptsBefore

        script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
        script window.jQuery || document.write('<script src="assets/libraries/jquery/jquery-2.1.3.min.js"><\/script>')
        script(src='assets/libraries/lodash/lodash-3.5.0.min.js')
        script(src='assets/js/plugins.js')
        script(src='assets/js/main.js')

        block scriptsAfter
